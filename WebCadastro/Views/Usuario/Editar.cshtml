@model UsuarioModel;
@using WebCadastro.Enums;
@{
    ViewData["Title"] = "Editar usuário";
}

<div>
    <h1>Editar Usuários </h1>
</div>

@if(TempData["MensagemDeErro"] != null)
{
    <div class="alert alert-success" role="alert">

        @TempData["MensagemDeErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
    </div>
}

<div>
    <form asp-controller="Usuario" asp-action="Editar" method="post">
        <!--aqui vamos pegar o id do registro e passar junto com o form-->
        <!--tipy= hiddon deixa invisivel-->
        <input type="hidden" asp-for="Id"/>
        <img src="./Imagens/login.png"/>

        <div class="mb-3">
            <label asp-for="Nome" class="form-label d-grid gop-2 d-md-flex justify-content-md-start">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label d-grid gop-2 d-md-flex justify-content-md-start">Nome</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Login" class="form-label d-grid gop-2 d-md-flex justify-content-md-start" >Login</label>
            <input asp-for="Login" type="text" class="form-control" />
            <span asp-validation-for="Login"></span>
        </div>

        <div class="form-group">
            <label for="Nome" class="form-label">Perfil</label>
            <select asp-for="Perfil" class="form-control">
                <option value="">Selecione</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>

        <button type="submit" class="btn btn-primary btn-block">Editar</button>
        <button type="submit" asp-controller="Usuario" asp-action="Index" class="btn btn-primary d-grid gop-2 d-md-flex justify-content-md-start">Voltar</button>
    </form>
</div>
